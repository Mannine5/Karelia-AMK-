<Window x:Class="InvoicingApp.ShowAllInvoices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoicingApp"
        mc:Ignorable="d"
        Title="Show All Invoices" Height="450" Width="800">

    <Grid>
        <TextBlock Grid.Row="2" x:Name="LoadingMessage"
                                Text="Loading Invoices..."
                                FontSize="30"
                                Foreground="Gray"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed"/>

        <TextBlock Grid.Row="2" x:Name="NoInvoicesMessage"
                                Text="No Invoices"
                                FontSize="30"
                                Foreground="Gray"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed"/>

        <DataGrid x:Name="InvoicesDataGrid" 
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  MouseDoubleClick="InvoicesDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Invoice ID" Binding="{Binding InvoiceId}" Width="90"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding Customer.Name}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding InvoiceDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="*"/>
                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="*"/>
                <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='{}{0:F2} €'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
