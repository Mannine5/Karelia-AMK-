<Window x:Class="InvoicingApp.UpdateCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoicingApp"
        mc:Ignorable="d"
        Title="Update Customer" Height="225" Width="370"
        KeyDown="WindowKeyDown">
    
    <Canvas>

        <Label Content="Select Customer" Canvas.Left="10" Canvas.Top="10" />
        <Label Content="Name" Canvas.Left="10" Canvas.Top="40" />
        <Label Content="Street Address" Canvas.Left="10" Canvas.Top="65" />
        <Label Content="Postal Code" Canvas.Left="10" Canvas.Top="90" />
        <Label Content="City" Canvas.Left="10" Canvas.Top="115" />

        <ComboBox Name="CustomerComboBox" 
                  Canvas.Left="115" 
                  Canvas.Top="12" 
                  Height="25" 
                  Width="200"
                  ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding SelectedCustomer}"> 

            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding CustomerId, StringFormat='ID {0}: '}"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBox Name="NameBox" 
             Canvas.Left="115" 
             Canvas.Top="45" Width="200" 
             Text="{Binding SelectedCustomer.Name}" />

        <TextBox Name="StreetAddressBox" 
             Canvas.Left="115" 
             Canvas.Top="70" Width="200" 
             Text="{Binding SelectedCustomer.StreetAddress}"/>

        <TextBox Name="PostalCodeBox" 
             Canvas.Left="115" 
             Canvas.Top="95" Width="200" 
             Text="{Binding SelectedCustomer.PostalCode}"/>

        <TextBox Name="CityBox" 
                 Canvas.Left="115" 
                 Canvas.Top="120" Width="200" 
                 Text="{Binding SelectedCustomer.City}"/> 

        <Button Content="Save" Canvas.Left="200" Canvas.Top="145" Width="55" Click="SaveClicked" />
        <Button Content="Cancel" Canvas.Left="260" Canvas.Top="145" Width="55" Click="CancelClicked" />
    </Canvas>
</Window>
