<Window x:Class="InvoicingApp.ShowAllCustomers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoicingApp"
        mc:Ignorable="d"
       Title="Show All Customers" Height="450" Width="800">

    <Grid>

        <TextBlock Grid.Row="2" x:Name="LoadingMessage"
                               Text="Loading Customers..."
                               FontSize="30"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>

        <TextBlock Grid.Row="2" x:Name="NoCustomersMessage"
                               Text="No Customers"
                               FontSize="30"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>

        <DataGrid x:Name="CustomersDataGrid" 
                 AutoGenerateColumns="False"
                 SelectionMode="Single"
                 IsReadOnly="True"
                 MouseDoubleClick="CustomersDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}" Width="90"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Street Address" Binding="{Binding StreetAddress}" Width="*"/>
                <DataGridTextColumn Header="Postal Code" Binding="{Binding PostalCode}" Width="*"/>
                <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
