<UserControl x:Class="InvoicingApp.InvoiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoicingApp"
        mc:Ignorable="d"
        Background="White"
        Height="900" Width="750" 
        VerticalAlignment="Top">

    <!--Full Form-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.6*"/>
            <RowDefinition Height="1.7*"/>
            <RowDefinition Height="1.1*"/>
        </Grid.RowDefinitions>

        <!--1. Section-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!--1.1 Section-->
            <StackPanel Margin="20,20,0,0">

                <!--Rakennus Oy Header-->
                <TextBlock Text="Rakennus Oy" FontSize="40" FontWeight="Bold" />

                <!--Rakennus Oy Details-->
                <StackPanel>
                    <TextBlock Text="Street Address" FontSize="20"/>
                    <TextBlock Text="City, State, Country" FontSize="20"/>
                    <TextBlock Text="Zip Code" FontSize="20"/>
                    <TextBlock Text="Phone Number" FontSize="20"/>
                    <TextBlock Text="Email" FontSize="20"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,30,0,0">

                        <!--Bill To Header-->
                        <TextBlock Text="Bill To" FontSize="40" FontWeight="Bold"/>

                        <!--Bill To Details-->
                        <StackPanel>
                            <TextBlock Text="Customer Name:" FontSize="20"/>
                            <TextBlock Text="Street Address:" FontSize="20"/>
                            <TextBlock Text="Postal Code:" FontSize="20"/>
                            <TextBlock Text="City:" FontSize="20"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,83,0,0">

                        <TextBlock Text="{Binding DisplayedInvoice.Customer.Name}" FontSize="20"/>
                        <TextBlock Text="{Binding DisplayedInvoice.Customer.StreetAddress}" FontSize="20"/>
                        <TextBlock Text="{Binding DisplayedInvoice.Customer.PostalCode}" FontSize="20"/>
                        <TextBlock Text="{Binding DisplayedInvoice.Customer.City}" FontSize="20"/>
                    </StackPanel>
                </Grid>

            </StackPanel>

            <!--1.2. Section-->
            <Grid Grid.Column="1" Margin="20,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="153"/>
                    <RowDefinition Height="83"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Margin="0,20,0,0">
                    <!--Invoice Header-->
                    <TextBlock Text="Invoice" FontSize="40" FontWeight="Bold"/>

                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>

                        <!--Invoice Details-->
                        <StackPanel>
                            <TextBlock Text="Invoice No:" FontSize="20"/>
                            <TextBlock Text="Invoice Date:" FontSize="20"/>
                            <TextBlock Text="Due Date:" FontSize="20"/>

                        </StackPanel>

                        <!--Invoice Details Input-->
                        <StackPanel Grid.Column="1" Margin="0,0,20,0">
                            <TextBlock Text="{Binding DisplayedInvoice.InvoiceId}" FontSize="20"/>
                            <TextBlock Text="{Binding DisplayedInvoice.InvoiceDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="20"/>
                            <TextBlock Text="{Binding DisplayedInvoice.DueDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="20"/>

                        </StackPanel>
                    </Grid>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Notes:" FontSize="20"/>
                    <TextBlock Grid.Column="1" Text="{Binding DisplayedInvoice.Notes}" FontSize="20" TextWrapping="Wrap"/>
                </Grid>

                <StackPanel Grid.Row="2">
                    <TextBlock Text="Total Price:" FontSize="40" FontWeight="Bold" />
                    <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:F2} €'}" FontSize="40" FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <!--Product Data Grid-->
            <DataGrid ItemsSource="{Binding ProductRows}" HeadersVisibility="Column" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="Product Name" Width="150" Binding="{Binding ProductName}"/>
                    <DataGridTextColumn Header="Description" Width="*" Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="Unit Price" Width="70" Binding="{Binding UnitPrice}"/>
                    <DataGridTextColumn Header="Quantity" Width="80" Binding="{Binding Quantity}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!--Work Data Grid-->
            <DataGrid Grid.Row="2" ItemsSource="{Binding WorkRows}" HeadersVisibility="Column" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="Work Description" Width="*" Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="Hour Cost" Width="70" Binding="{Binding HourCost}"/>
                    <DataGridTextColumn Header="Work Hours" Width="80" Binding="{Binding WorkHours}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!--3. Section-->
        <Grid Grid.Row="2" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--4.1 Section-->
            <StackPanel Margin="20,20,0,0">

                <!-- Payment Information Header-->
                <TextBlock Text="Payment Information" FontSize="20" FontWeight="Bold"/>

                <!--Payment Information Details-->
                <StackPanel>
                    <TextBlock Text="Rakennus Oy" FontSize="20" />
                    <TextBlock Text="Bank: Really Great Bank" FontSize="20" />
                    <TextBlock Text="Account No: 0123 4567 8901" FontSize="20" />
                </StackPanel>
            </StackPanel>

            <!--4.2 Section-->
            <StackPanel Grid.Column="1" Margin="20,20,0,0">

                <!--Contact Person Header-->
                <TextBlock Text="Contact Person" FontSize="20" FontWeight="Bold"/>

                <!--Contact Person Details-->
                <StackPanel>
                    <TextBlock Text="Chief Executive Officer" FontSize="20" />
                    <TextBlock Text="123 Anywhere St, Any City, ST 12345" FontSize="20" />
                    <TextBlock Text="+123-456-7890" FontSize="20" />
                    <TextBlock Text="hello@reallygreatsite.com" FontSize="20" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
